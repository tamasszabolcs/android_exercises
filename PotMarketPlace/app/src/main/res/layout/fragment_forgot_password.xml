<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/header_height"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
    >


    </FrameLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="FORGOT PASSWORD?"
            android:textColor="@color/purple_700"
            android:layout_marginTop="84dp"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_height"


            tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.469">

    </TextView>
    <TextView
            android:layout_width="305dp"
            android:layout_height="94dp"
            android:text="@string/hint_forgot_password"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/forgot_password_text_size"
            android:id="@+id/f_password_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:ignore="MissingConstraints" android:layout_marginTop="52dp">

    </TextView>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/ti_username_fp" tools:ignore="MissingConstraints"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_password_text">


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/ti_email_fp" tools:ignore="MissingConstraints"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_username_fp">

        <EditText
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/new_password"
                android:inputType="textPassword"
                android:padding="@dimen/et_padding"
                android:hint="@string/new_password"
                android:textColor="@color/black"
                android:textSize="@dimen/forgot_password_et_text_size"
                tools:ignore="MissingConstraints">

        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_submit_fp"
            android:gravity="center"
            android:layout_marginStart="16dp"

            android:layout_marginEnd="16dp"
            android:paddingTop="@dimen/button_padding"
            android:paddingBottom="@dimen/button_padding"
            android:text="SUBMIT"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_email_fp"
            app:layout_constraintHorizontal_bias="0.0"
            tools:ignore="MissingConstraints,NotSibling" android:layout_marginTop="20dp">

    </Button>
