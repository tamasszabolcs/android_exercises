<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <ImageView
            android:layout_width="518dp"
            android:layout_height="869dp"
            android:scaleType="center"
            android:src="@drawable/ic_profile"

            android:id="@+id/iv_prof_image" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="-69dp"
            tools:layout_editor_absoluteX="-54dp">

    </ImageView>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Player name: "
              android:textSize="20sp"
              android:id="@+id/player_name"
              android:layout_marginTop="20dp"
              app:layout_constraintBottom_toBottomOf="@+id/iv_prof_image"
              tools:ignore="MissingConstraints">

    </TextView>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="High score: "
              android:textSize="20sp"
              android:id="@+id/high_score"
              android:layout_marginTop="20dp"
              app:layout_constraintBottom_toBottomOf="@+id/player_name"
              tools:ignore="MissingConstraints">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>