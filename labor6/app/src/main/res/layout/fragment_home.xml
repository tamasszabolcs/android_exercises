<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <ImageView
            android:layout_width="518dp"
            android:layout_height="869dp"
            android:scaleType="center"
            android:src="@drawable/ic_tick"

            android:id="@+id/iv_image" tools:ignore="MissingConstraints" tools:layout_editor_absoluteY="-69dp"
            tools:layout_editor_absoluteX="-54dp">

    </ImageView>
    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/test_skills"
            android:background="@color/purple_500"
            android:text="Test your skills"
            app:layout_constraintBottom_toBottomOf="@+id/iv_image"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textStyle="bold" tools:ignore="MissingConstraints">
    </Button>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/read_questions"
            android:background="@color/purple_500"
            android:text="Read questions"
            app:layout_constraintBottom_toBottomOf="@+id/test_skills"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textStyle="bold" tools:ignore="MissingConstraints">
    </Button>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_question"
            android:background="@color/purple_500"
            android:text="Create question"
            app:layout_constraintBottom_toBottomOf="@+id/read_questions"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textStyle="bold" tools:ignore="MissingConstraints">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>